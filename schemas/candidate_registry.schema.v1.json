{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://signalcraft.dev/schemas/candidate_registry.schema.v1.json",
  "title": "SignalCraft Candidate Registry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "candidates"
  ],
  "properties": {
    "schema_version": {
      "const": 1
    },
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "candidate_id",
          "profile_path"
        ],
        "properties": {
          "candidate_id": {
            "type": "string",
            "pattern": "^[a-z0-9_]{1,64}$"
          },
          "profile_path": {
            "type": "string"
          }
        }
      }
    }
  }
}
